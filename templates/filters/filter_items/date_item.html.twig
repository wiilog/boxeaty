{% set unique_date = unique_date is defined and unique_date %}
{% set name = name is defined and name ? name : 'from' %}

<div class="{{ not unique_date ? 'dates-filter' }}">
    <label class="dates">
        {{ not unique_date ? 'Du' }}
        <input type="date" name="{{ name }}" class="data"  {% if from is defined %}value="{{ from | date('Y-m-d') }}"{% endif %}>
    </label>
    {% if not unique_date %}
        <label class="dates">
            au
            <input type="date" name="to" class="data" {% if to is defined %}value="{{ to | date('Y-m-d') }}"{% endif %}>
        </label>
    {% endif %}
</div>
