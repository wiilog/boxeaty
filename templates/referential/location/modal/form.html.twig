<div class="row">
    <div class="col-12 toggle location-type">
        <span class="label">Type</span>

        <input type="radio" id="{{ location.id ? 'edit' : 'new' }}-location-type-kiosk" name="type" class="data" value="1" {{ location.kiosk ? 'checked' }}/>
        <label for="{{ location.id ? 'edit' : 'new' }}-location-type-kiosk">Borne</label>

        <input type="radio" id="{{ location.id ? 'edit' : 'new' }}-location-type-location" name="type" class="data" value="0" {{ not location.kiosk ? 'checked' }}/>
        <label for="{{ location.id ? 'edit' : 'new' }}-location-type-location">Emplacement</label>
    </div>
    <div class="col-12">
        <label>
            Nom
            <input type="text" name="name" class="data" placeholder="Nom de votre emplacement" value="{{ location.name }}" required/>
        </label>
    </div>
    <div class="col-12 toggle">
        <span class="label">Statut</span>

        <input type="radio" id="{{ location.id ? 'edit' : 'new' }}-location-active" name="active" class="data" value="1" {{ location.active ? 'checked' }}/>
        <label for="{{ location.id ? 'edit' : 'new' }}-location-active">Actif</label>

        <input type="radio" id="{{ location.id ? 'edit' : 'new' }}-location-inactive" name="active" class="data" value="0" {{ not location.active ? 'checked' }}/>
        <label for="{{ location.id ? 'edit' : 'new' }}-location-inactive">Inactif</label>
    </div>
    <div class="col-12">
        <label>
            Client
            <select name="client" class="data" data-s2="client" data-placeholder="Sélectionnez un client" required>
                {% if location.client %}
                    <option value="{{ location.client.id }}" selected>{{ location.client.name }}</option>
                {% endif %}
            </select>
        </label>
    </div>
    <div class="col-12 kiosk-fields {{ not location.kiosk ? 'd-none' }}">
        <label>
            Capacité
            <input type="number" name="capacity" class="data" placeholder="Saisissez la capacité de la borne"
                   value="{{ location.capacity }}" {{ location.kiosk ? 'required' : 'data-required' }} min="1"/>
        </label>
    </div>
    <div class="col-12 kiosk-fields {{ not location.kiosk ? 'd-none' }}">
        <label>
            Message de la borne
            <input type="text" name="message" class="data" placeholder="Saisissez le message de la borne"
                   value="{{ location.message }}"/>
        </label>
    </div>
    <div>
        <label class="pb-3">Type d'emplacement</label>
        <div class="col-12 d-flex justify-content-between">
            {% for type, index in constant('App\\Entity\\Location::LOCATION_TYPES') %}
                {% set checked = (location.type == type) %}
                <div class="d-flex">
                    <input {{ checked ? 'checked' }} type="radio" class="data mt-2" name="locationType" value="{{ type }}">
                    <label class="mt-0 mx-2">{{ index }}</label>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="col-12">
        <label>
            Dépôt
            <select name="depository" class="data" data-s2="depository" data-placeholder="Sélectionnez un depot" required>
                {% if location.depot %}
                    <option value="{{ location.depot.id }}" selected>{{ location.depot.name }}</option>
                {% endif %}
            </select>
        </label>
    </div>
</div>
