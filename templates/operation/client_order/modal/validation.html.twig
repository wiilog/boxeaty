<div id="modal-validation-client-order" class="modal fade">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <button type="button" class="close-modal" data-bs-dismiss="modal" aria-label="Close"></button>
            <h1>Validation de votre commande</h1>
            <div class="body">
                <div class="validationClientOrder">
                    <div class="header-section">
                        <h2 class="header-section-label">Information</h2>
                    </div>
                    <div class="row justify-content-between">
                        <span class="bigTxt col-md-8 col-12">{{ clientOrder.client.name }}</span>
                        <span class="col-md-4 col-12 text-end">{{ clientOrder.requester.username }}</span>
                    </div>
                    <div class="row justify-content-between">
                        <span class="col-md-8 col-12">{{ clientOrder.client.address }}</span>
                        <span class="col-md-4 col-12 text-end">{{ clientOrder.requester.phone }}</span>
                    </div>
                    <div class="row justify-content-between align-items-center">
                        {% if clientOrder.collectRequired %}
                            <div class="col-md-8 col-12">
                                <span class="bigTxt">Collecte</span> (Box à nettoyer)&nbsp;:
                                {{ clientOrder.cratesAmountToCollect }} caisse{{ clientOrder.cratesAmountToCollect > 1 ? 's' }}
                            </div>
                        {% endif %}
                        <span class="delivery-method-selected col-auto">
                            <label>
                                <i class="icon ico bxi bxi-{{ clientOrder.deliveryMethod.icon }}"></i>
                                {{ clientOrder.deliveryMethod.name }}
                            </label>
                        </span>
                    </div>

                    <span class="bigTxt">Commentaire pour le livreur <br></span>
                    <span class="recap">{{ clientOrder.comment|raw }}</span>

                    <div class="header-section">
                        <h2 class="header-section-label">Livraison</h2>
                    </div>
                    <span class="bigTxt"> Date de livraison : {{ expectedDelivery }}</span>

                    <div class="details-content body">
                        {% if clientOrder.lines|length > 0 %}
                            {% for line in clientOrder.lines %}
                                <div class="row client-order-line">
                                    <div class="col-auto">
                                        {% if line.boxType.image %}
                                            <img src="{{ asset(line.boxType.image.path) }}"
                                                 class="box-type-image"
                                                 alt="image"/>
                                        {% endif %}
                                    </div>
                                    <div class="col">
                                        {{ line.quantity }}&nbsp;&times;&nbsp; Box de type <b>{{ line.boxType.name }}</b>
                                    </div>
                                    <div class="col-3">
                                        T.U. {{ line.boxType.price|format_helper('price') }}
                                    </div>
                                    <div class="col-3">
                                        {{ (line.quantity * line.boxType.price)|format_helper('price') }}
                                    </div>
                                </div>
                            {% endfor %}
                        {% else %}
                            <div class="row empty-client-order">
                                <div class="col-12 text-center">Aucune Box à afficher</div>
                            </div>
                        {% endif %}
                        <div class="header-section">
                            <h2 class="header-section-label">Montant de la commande</h2>
                        </div>

                        <span class="bigTxt">Récapitulatif de commande</span>
                        <div class="row justify-content-between align-items-center">
                            <span class="col-2">Box</span>
                            <div class="col dotted mt-1"></div>
{#                            TODO + format_helper #}
                            <span class="col-2 text-end">{{ clientOrder.deliveryPrice }} €</span>
                        </div>
                        <div class="row justify-content-between align-items-center">
                            <span class="col-2">Livraison</span>
                            <div class="col dotted mt-1"></div>
                            {#                            TODO + format_helper #}
                            <span class="col-2 text-end">{{ clientOrder.deliveryPrice }} €</span>
                        </div>
                        <div class="row justify-content-between align-items-center">
                            <span class="col-2">Service</span>
                            <div class="col dotted mt-1"></div>
                            {#                            TODO + format_helper #}
                            <span class="col-2 text-end">{{ clientOrder.servicePrice }} €</span>
                        </div>
                        <div class="row justify-content-between align-items-center">
                            <span class="col-2">Collecte</span>
                            <div class="col dotted mt-1"></div>
                            <span class="col-2 text-end">Inclus</span>
                        </div>
                    </div>
            </div>
            <div class="footer">
                <button type="button" class="secondary" data-bs-dismiss="modal">Annuler</button>
                <button type="submit" class="primary">Enregistrer</button>
            </div>
        </div>
    </div>
</div>
