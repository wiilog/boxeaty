<div id="modal-start-delivery" class="modal ade">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <button type="button" class="close-modal" data-bs-dismiss="modal" aria-label="Close"></button>
            <h1>Lancement des livraisons</h1>
            <div class="inline-form">
                <label class="inline">
                    Période de lancement {% include('filters/filter_items/date_item.html.twig')%}
                </label>
                <label class="inline">
                    Dépôt
                    <select name="depository" data-s2="depository" class="data depository-filter"
