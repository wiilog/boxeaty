<mjml>
    <mj-head>
        <mj-style>
            a {text-decoration: none;}
        </mj-style>
    </mj-head>
    <mj-body background-color="#F9F9EC">
        <mj-wrapper background-color="#F9F9EC" border="1px solid #F9F9EC" full-width="full-width" border="0"
                    padding="0px">
            <mj-section>
                <mj-column>
                    <mj-image width="260px" height="91px" src="{{ base64('images/email/logo_SansBaseLine.png') }}"></mj-image>
                    <mj-text font-size="18px" align="left" font-family="helvetica"
                             font-weight="bold" color="#1E1F44">Bonjour,
                    </mj-text>
                    <mj-text font-size="15px" align="left" font-family="helvetica" color="#1E1F44">Voici votre
                        ticket‑consigne, échangez-le en caisse contre une nouvelle Box
                        en scannant le QR-code ci-dessous :
                    </mj-text>
                </mj-column>
            </mj-section>
        </mj-wrapper>
        <mj-wrapper background-color="#F9F9EC" border="1px solid #F9F9EC" full-width="full-width" border="0"
                    padding="0px" padding-bottom="15px">
            <mj-section padding="0px">
                <mj-column width="80%" background-color="white" padding-bottom="20px" padding-top="20px" padding="0px">
                    <mj-text align="center" font-size="20px" line-height="25px" color="#1E1F44">
                        Valable jusqu'au {{ ticket.validityDate | date('d/m/Y') }}
                    </mj-text>
                    <mj-image width="300px" height="300px" src="{{ qr_code_data_uri(ticket.number) }}"></mj-image>
                    <mj-text align="center" font-size="40px" color="#1E1F44">
                        {{ ticket.number }}
                    </mj-text>
                    <mj-text align="center" font-size="20px" color="#1E1F44">
                        Le {{ ticket.creationDate | date('d/m/Y à H:i') }}
                    </mj-text>

                    <mj-text align="center" font-size="20px" color="#1E1F44">
                        Utilisable dans {{ usable }}
                    </mj-text>

                    <mj-text align="center" font-size="20px" color="#1E1F44">
                        <strong>{{ ticket.location.client ? ticket.location.client.depositTicketsClients | map(l => l.name) | join(', ') }}</strong>
                    </mj-text>
                    <mj-text align="center" font-size="20px" color="#1E1F44">
                        *Remboursement possible en caisse
                    </mj-text>
                </mj-column>
            </mj-section>
        </mj-wrapper>
        <mj-wrapper background-color="#F9F9EC" border="1px solid #F9F9EC" full-width="full-width" border="0"
                    padding="0px">
            <mj-section padding="0px">
                <mj-column padding="0px">
                    <mj-text font-size="20px" align="center" padding-bottom="20px" padding-top="20px"
                             color="#1E1F44">
                        Merci pour votre geste !
                    </mj-text>
                    <mj-text font-size="20px" align="center" padding-bottom="5px" padding-top="20px" color="#1E1F44">
                        Bonne journée,
                    </mj-text>
                    <mj-text font-size="20px" align="center" color="#1E1F44">
                        L'équipe BoxEaty
                    </mj-text>
                </mj-column>
            </mj-section>
        </mj-wrapper>
    </mj-body>
</mjml>
