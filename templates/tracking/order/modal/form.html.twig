<div class="row">
    <div class="col-md-12 col-12">
        <div class="scan-box"><i class="fas fa-camera fa-2x"></i></div>
    </div>
    <div class="col-md-12 col-12">
        <label>
            Code(s) Box
            <select name="box" class="data" data-s2 data-no-empty-option data-placeholder="Sélectionnez une ou plusieurs Box" required multiple>
                {% for box in boxes %}
                    <option data-price="{{ box.type.price }}" value="{{ box.number }}">{{ box.number }}</option>
                {% endfor %}
            </select>
        </label>
    </div>
</div>
<div class="row deposit-ticket-container d-none">
    <div class="col-12">
        <div class="row">
            <div class="col">
                <label>
                    Validation du ticket-consigne
                    <select name="depositTicket" class="data"
                            data-s2 data-no-empty-option data-placeholder="Entrez des tickets-consigne..." multiple required>
                        {% for depositTicket in depositTickets %}
                            <option data-price="{{ depositTicket.box ? depositTicket.box.type.price : 0 }}" value="{{ depositTicket.number }}">{{ depositTicket.number }}</option>
                        {% endfor %}
                    </select>
                </label>
            </div>
            <div class="col-auto mt-2">
                <div class="deposit-ticket-scan"><i class="fas fa-qrcode fa-2x"></i></div>
            </div>
        </div>
    </div>
    <div class="col-12">
        <label>
            <span class="cost-label">Coût total</span>
            <div class="input-group bx-input-group">
                <input type="text" class="bg-white" name="totalCost" disabled value="0,00"/>
                <span class="input-group-text"><span>€</span></span>
            </div>
        </label>
    </div>
    <div class="col-12">
        <div class="d-none hint alert alert-danger">
        </div>
    </div>
</div>
