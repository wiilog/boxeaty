{% extends 'base.html.twig' %}

{% block title %}BoxEaty - Créer un compte{% endblock %}

{% block bodyclass %}login{% endblock %}
{% block body %}
    <main class="login">
        <img src="{{ asset('images/logo.svg') }}" class="logo" alt="Logo BoxEaty">

        <h1>Créer un compte</h1>
        <form method="post">
            <label>
                Adresse email
                <input type="text" name="email" placeholder="Adresse email" value="{{ user.email }}" required autofocus>
            </label>

            <label>
                Nom d'utilisateur
                <input type="text" name="username" placeholder="Nom d'utilisateur" value="{{ user.username }}" required>
            </label>

            <label>
                Mot de passe
                <input type="password" name="password" placeholder="Mot de passe" required>
            </label>

            <label>
                Confirmer le mot de passe
                <input type="password" name="password-repeat" placeholder="Mot de passe" required>
            </label>

            <button class="primary w-100 mt-3" type="submit">Créer mon compte</button>
            <a href="{{ path('login') }}" class="secondary w-100 mt-1" role="button">Retour à la connexion</a>
        </form>
    </main>
{% endblock %}
