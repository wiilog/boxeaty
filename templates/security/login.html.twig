{% extends 'base.html.twig' %}

{% block title %}BoxEaty - Connexion{% endblock %}

{% block bodyattributes %}style="background:white"{% endblock %}
{% block body %}
    <main class="login">
        <img src="{{ asset('images/logo.svg') }}" class="logo" alt="Logo BoxEaty">

        <h1>Connexion</h1>
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <label class="d-block">
                Adresse email
                <input type="text" value="{{ last_username }}" name="email" class="d-block w-100" required autofocus>
            </label>

            <label class="d-block mt-2">
                Mot de passe
                <input type="password" name="password" class="d-block w-100" required>
            </label>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="separated mt-1">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="_remember_me" id="remember-me">
                    <label class="form-check-label text-reset" for="remember-me">
                        Se souvenir de moi
                    </label>
                </div>
                <a href="{{ path('password_forgotten') }}" class="text-reset text-semi-bold">Mot de passe oublié</a>
            </div>

            <button class="primary w-100 mt-3" type="submit">Se connecter</button>
            <a href="{{ path('register') }}" class="secondary w-100 mt-1" role="button">Créer un compte</a>
        </form>
    </main>
{% endblock %}
